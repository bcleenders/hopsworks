   <url-mapping id="hosts">
      <pattern value="/sauron/hosts" />
      <view-id value="/sauron/hosts.xhtml" />
   </url-mapping> 
      
   <url-mapping id="host">
      <pattern value="/sauron/hosts/#{hostid}" />
      <view-id value="/sauron/host.xhtml" />
   </url-mapping>     

   <url-mapping id="alerts">
      <pattern value="/sauron/alerts" />
      <view-id value="/sauron/alerts.xhtml" />
   </url-mapping>     
   
   <url-mapping id="clusters">
      <pattern value="/sauron/clusters" />
      <view-id value="/sauron/clusters.xhtml" />
   </url-mapping>   

   <url-mapping id="cluster-status">
      <pattern value="/sauron/clusters/#{cluster}" />
      <view-id value="/sauron/cluster-status.xhtml" />
   </url-mapping>  
   <url-mapping id="cluster-actionhistory">
      <pattern value="/sauron/clusters/#{cluster}/action_history" />
      <view-id value="/sauron/cluster-actionhistory.xhtml" />
   </url-mapping>     

   <url-mapping id="service-status">
      <pattern value="/sauron/clusters/#{cluster}/#{service}" />
      <view-id value="/sauron/service-status.xhtml" />
   </url-mapping>
   <url-mapping id="service-instances">
      <pattern value="/sauron/clusters/#{cluster}/#{service}/instances" />
      <view-id value="/sauron/service-instances.xhtml" />
   </url-mapping>   
   <url-mapping id="service-actionhistory">
      <pattern value="/sauron/clusters/#{cluster}/#{service}/action_history" />
      <view-id value="/sauron/service-actionhistory.xhtml" />
   </url-mapping>      
   <url-mapping id="service-terminal">
      <pattern value="/sauron/clusters/#{cluster}/#{service}/terminal" />
      <view-id value="/sauron/service-terminal.xhtml" />
   </url-mapping>  
   
   <url-mapping id="role-status">
      <pattern value="/sauron/clusters/#{cluster}/#{service}/#{role}/#{hostid}" />
      <view-id value="/sauron/role-status.xhtml" />
   </url-mapping>   
   <url-mapping id="role-actionhistory">
      <pattern value="/sauron/clusters/#{cluster}/#{service}/#{role}/#{hostid}/action_history" />
      <view-id value="/sauron/role-actionhistory.xhtml" />
   </url-mapping>    

